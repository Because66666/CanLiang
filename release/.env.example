# Flask应用配置示例
# 复制此文件为 .env.development 并根据需要修改配置值

# Flask基础配置
SECRET_KEY=your-secret-key-here
DEBUG=false

# 服务器配置
HOST=0.0.0.0
PORT=3000

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(levelname)s - %(message)s
LOG_DATE_FORMAT=%Y-%m-%d %H:%M:%S

# BetterGI安装路径
# BGI_INSTALL_PATH=C:\BetterGI

# 文件保存路径
FILE_SAVE_PATH=files

# 静态文件路径
STATIC_FOLDER=static

# CORS配置
ENABLE_CORS=false

# 环境特定配置示例：
# 开发环境：DEBUG=true, ENABLE_CORS=true, HOST=127.0.0.1
# 生产环境：DEBUG=false, ENABLE_CORS=false, HOST=0.0.0.0
# 测试环境：DEBUG=true, ENABLE_CORS=true, PORT=3001